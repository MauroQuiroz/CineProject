<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000"  >
    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/lados_redondeados"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txt_terminos_and_condiciones"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Términos y Condiciones"
            android:layout_margin="12dp"
            android:textSize="18sp"
            android:textColor="@color/color_text"/>
        <TextView
            android:id="@+id/txt_politicas"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Política de Privacidad"
            android:layout_margin="12dp"
            android:textSize="18sp"
            android:textColor="@color/color_text"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_2"
        app:layout_constraintTop_toBottomOf="@+id/lin_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lin_3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#00000000"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_3"
        app:layout_constraintTop_toBottomOf="@+id/lin_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/lados_redondeados"
        android:backgroundTint="@color/white">
        <TextView
            android:id="@+id/txt_cancelar"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_margin="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_text"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
