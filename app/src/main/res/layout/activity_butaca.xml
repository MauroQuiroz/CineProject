<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.butaca.Butaca"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/menuTop"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:background="@drawable/borde_inferior"
        >
        <ImageView
            android:id="@+id/icon_close_butaca"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butacas"
            android:layout_marginStart="15dp"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:textSize="22sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borde_inferior"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Titulo de la pelicula"

            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:textSize="22sp"
            />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="lorem io ein de ls ldf ld"

            android:textColor="@color/color_text_secundario"

            android:textSize="15sp"
            />
    </LinearLayout>

    <com.example.cineplanet.ui.butaca.CanvasButaca
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        >

    </com.example.cineplanet.ui.butaca.CanvasButaca>

    <com.example.cineplanet.ui.butaca.CanvasButacaDetalle
        android:id="@+id/info_butaca"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/continuar"/>

    <LinearLayout
        android:id="@+id/continuar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Continuar"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

    

    

</androidx.constraintlayout.widget.ConstraintLayout>